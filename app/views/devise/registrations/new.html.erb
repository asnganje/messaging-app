<div class="flex items-center justify-center mb-5">
  <div class="w-full max-w-sm mb-5 md:mb-0 bg-white py-4 px-10 rounded-lg shadow-md">
    <h2 class="text-2xl font-semibold text-center mb-4">Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

            <div class="mb-3">
        <%= f.label :username, class:"block text-gray-700 -mb-4" %><br />
        <%= f.text_field :username,
          autofocus: true,
          autocomplete: "username",
          placeholder: "username",
          class: "w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
        %>
      </div>

      <div class="mb-3">
        <%= f.label :email, class:"block text-gray-700 -mb-4" %><br />
        <%= f.email_field :email,
          autofocus: true,
          autocomplete: "email",
          placeholder: "email",
          class: "w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
        %>
      </div>

      <div class="mb-2">
        <%= f.label :password, class:"block text-gray-700" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password,
          autocomplete: "new-password",
          placeholder:"password",
          class: "w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
          %>
      </div>

      <div class="mb-2">
        <%= f.label :password_confirmation, class:"block text-gray-700 -mb-4" %><br />
        <%= f.password_field :password_confirmation,
          autocomplete: "new-password",
          placeholder:"password",
          class: "w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
        %>
      </div>

      <div class="mb-3">
        <%= f.submit "Sign up",
          class:"w-full cursor-pointer bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 transition duration-200"
        %>
      </div>
    <% end %>
    <div class="text-center test-sm text-gray-700">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

