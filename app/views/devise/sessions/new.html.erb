<div class="flex items-center justify-center">
  <div class="w-full max-w-sm mb-5 md:mb-0 bg-white py-6 px-10 rounded-lg shadow-md">
    <h2 class="text-2xl font-semibold text-center mb-4">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-2">
        <%= f.label :email, class:"block text-gray-700" %><br />
        <%= f.email_field :email,
        autofocus: true,
        autocomplete: "email",
        class: "w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
        %>
      </div>

      <div class="mb-2">
        <%= f.label :password, class:"block text-gray-700" %><br />
        <%= f.password_field :password,
        autocomplete: "current-password",
        class: "w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
        %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="flex mb-4 items-center">
          <%= f.check_box :remember_me, class:"mr-2" %>
          <%= f.label :remember_me, class:"text-gray-700" %>
        </div>
      <% end %>

      <div class="mb-3">
        <%= f.submit "Log in",
          class:"w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 transition duration-200"
        %>
      </div>
    <% end %>
    <div class="text-center test-sm text-gray-700">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
